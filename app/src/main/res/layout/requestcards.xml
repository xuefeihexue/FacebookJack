<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
  android:paddingTop="1dp"
    android:paddingBottom="7dp">

    <android.support.v7.widget.CardView
        android:id="@+id/requestcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="#fff"
            android:elevation="10dp"
           >


            <ImageView
                android:id="@+id/requesterProfilePic"
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepic" />

            <TextView
                android:id="@+id/mutualFriendsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="8dp"
                android:text="12 Mutual Firends"
                android:textSize="15sp"
                android:layout_below="@+id/requesterName"
                android:layout_alignStart="@+id/button3" />


            <TextView
                android:id="@+id/requesterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="SAHIL"
                android:textColor="#000"
                android:textSize="25sp"
                android:layout_alignTop="@+id/requesterProfilePic"
                android:layout_alignStart="@+id/mutualFriendsCount" />

            <Button
                android:id="@+id/button"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/borderbutton"
                android:text="DELETE"

                android:layout_marginTop="77dp"

                android:layout_alignParentEnd="true"
                android:layout_marginEnd="17dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"

                android:background="@drawable/buttonstyle"
                android:text="CONFIRM"
                android:textColor="#fff"
                android:layout_below="@+id/mutualFriendsCount"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>




</LinearLayout>