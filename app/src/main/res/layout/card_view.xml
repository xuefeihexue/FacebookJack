<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    xmlns:app2="http://schemas.android.com/apk/res-auto"
   android:paddingBottom="15dp"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:elevation="10dp"
            android:background="#fff"
            android:paddingTop="10dp"
            android:layout_height="410dp">


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/logo2"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView3" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interesting Engineering"
                android:textColor="#000"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imageView2"
                android:layout_marginStart="7dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView2"
                android:layout_below="@+id/textView2"
                android:text="Apr 1 at 7:21am." />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:layout_gravity="center"
                android:src="@drawable/globetextview"
                android:layout_toRightOf="@id/textView"
                android:id="@+id/imageView4"
                android:layout_below="@+id/textView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000"
                android:text="This wheelchair can actually climb stairs"
                android:layout_marginTop="6dp"
                android:id="@+id/textView3"
                android:layout_below="@+id/imageView2"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="10dp"
                android:layout_marginStart="13dp" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app2:srcCompat="@drawable/image"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView3" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="75dp"
                android:layout_height="37dp"
                app2:srcCompat="@drawable/emojis"
                android:layout_above="@+id/linearLayout"
                android:layout_toStartOf="@+id/textView4" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="19k"
                android:textSize="15sp"
                android:layout_alignBottom="@+id/imageView5"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="582 Comments 7.6k Shares 839K Views"
                android:layout_alignTop="@+id/textView4"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp" />


            <View
                android:id="@+id/view"
                android:layout_width="370dp"
               android:layout_marginStart="25dp"
                android:layout_height="0.5dp"

                android:layout_marginTop="351dp"
                android:background="#cccccc" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_alignParentBottom="true"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_gravity="center"
                        android:src="@drawable/like"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Like"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:textAlignment="center"
                        android:layout_gravity="center"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"

                        android:layout_gravity="center"
                        android:src="@drawable/comment"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:text="Comment"
                        android:textStyle="bold"
                        android:textColor="#333333"
                        android:layout_gravity="center"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:paddingStart="30dp"
                    android:paddingEnd="30dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"

                        android:layout_gravity="center"
                        android:src="@drawable/share"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:textAlignment="center"
                        android:textColor="#333333"
                        android:text="Share"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        />
                </LinearLayout>








            </LinearLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignEnd="@+id/view"
                android:layout_alignParentTop="true"
                app2:srcCompat="@drawable/downarrow"
                android:layout_alignBottom="@+id/textView2" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>