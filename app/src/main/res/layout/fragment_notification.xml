<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#DBDBDD"
    android:paddingTop="2dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"

        android:layout_height="match_parent"

        android:background="#cccccc"
      >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <android.support.v7.widget.CardView
                android:id="@+id/cv1"
                android:background="#EDFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/download"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Your account was logged into from an unrecognized browser or device.Please review this login now"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/justnow"
                        android:layout_below="@+id/requesterName"
                        android:layout_alignStart="@+id/requesterName" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cv2"
                android:layout_below="@id/cv1"
                android:background="#EDFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profilepic"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Sahil Bhatoa os in Montreal,Quebec with Fie Xui"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/timestamp"
                        android:layout_below="@+id/requesterName"
                        android:layout_alignStart="@+id/requesterName"
                        android:layout_alignBottom="@+id/imageView2" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@id/cv2"
                android:id="@+id/cv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profilepic" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Sahil Bhatoa just posted for the first time in a while"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/requesterName"
                        android:layout_below="@+id/requesterName"
                        app:srcCompat="@drawable/timestamp"
                        android:layout_alignParentBottom="true" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@id/cv3"
                android:id="@+id/cv4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/profilepic" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Sahil Bhatoa checked in to the Old Port Montreal"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/requesterName"
                        android:layout_below="@+id/requesterName"
                        app:srcCompat="@drawable/timestamp"
                        android:layout_alignParentBottom="true" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_below="@id/cv4"
                android:id="@+id/cv5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#EDFFFF">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginStart="10dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/peter" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="A Page you like,Peter Dinklage,changed its name to Peter Dinklange -Tyrion  Lannister"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="200dp"
                        android:layout_height="30dp"
                        android:layout_alignStart="@+id/requesterName"
                        android:layout_below="@+id/requesterName"
                        app:srcCompat="@drawable/timestamp"
                        android:layout_alignParentBottom="true" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_below="@id/cv5"
                android:id="@+id/cv6"
                android:background="#EDFFFF"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#EDF3FF"

                    android:elevation="10dp"

                    android:paddingTop="10dp">


                    <ImageView
                        android:id="@+id/imageView2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/download"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="10dp" />


                    <TextView
                        android:id="@+id/requesterName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignTop="@+id/imageView2"
                        android:layout_marginStart="23dp"
                        android:layout_toEndOf="@+id/imageView2"
                        android:text="Your account was logged into from an unrecognized browser or device.Please review this login now"
                        android:textColor="#000"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:srcCompat="@drawable/justnow"
                        android:layout_below="@+id/requesterName"
                        android:layout_alignStart="@+id/requesterName" />


                </RelativeLayout>

            </android.support.v7.widget.CardView>
</RelativeLayout>
    </ScrollView>
</LinearLayout>